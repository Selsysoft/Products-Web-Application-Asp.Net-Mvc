@model List<Mvc_Intermediate.Models.Urun>
@{
    ViewBag.Title = "UrunListe";
}

<h2>Ürün Listesi</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Resim</th>
            <th scope="col">Ürün Adı</th>
            <th scope="col">Fiyat</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/img/@item.Resim" />
                </td>
                <td>@item.UrunAdi</td>
                <td>@item.Fiyat</td>
                <td><a href="/Home/Details/@item.UrunId" class="btn btn-primary btn-xs">Detay</a></td>
            </tr>
        }

    </tbody>
</table>